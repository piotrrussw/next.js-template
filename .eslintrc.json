{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
    },
    "overrides": [
        {
            "files": ["*/**/*.test.js"],
            "env": {
                "jest": true
            }
        }
    ],
    "settings": {
        "react": {
            "version": "detected"
        }
    }
}
